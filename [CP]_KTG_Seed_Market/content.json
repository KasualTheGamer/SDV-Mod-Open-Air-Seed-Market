{
  "Format": "2.7.0",
  "ConfigSchema": {
    "WalkToShops": {
      "AllowValues": "true, false",
      "Default": true
    },
    "LimitSeedsBySeason": {
      "AllowValues": "true, false",
      "Default": false
    }
  },
  "Changes": [
    {
      "Action": "EditData",
      "Target": "Data/Locations",
      "Entries": {
        "{{ModID}}_SeedShops": {
          "CreateOnLoad": {
            "MapPath": "Maps/KTG.SeedShopsMap"
          },
          "DisplayName": "{{i18n:DisplayName}}",
          "DefaultArrivalTile": {
            "X": 9,
            "Y": 8
          },
          "MusicDefault": "AbigailFluteDuet"
        }
      }
    },
    {
      "Action": "Load",
      "Target": "Maps/KTG.SeedShopsMap",
      "FromFile": "assets/SeedShops.tmx"
    },
    {
      "Action": "Include",
      "FromFile": "data/ShopEditBase.json",
      "When": {
        "LimitSeedsBySeason": false
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/ShopEditBaseSeasonal.json",
      "When": {
        "LimitSeedsBySeason": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "data/ShopEditBaseUnseasonal.json"
    },
    {
      "Action": "Include",
      "FromFile": "data/ShopEditCornucopia.json"
    },
    {
      "Action": "EditMap",
      "Target": "Maps/BusStop",
      "AddWarps": [
        "43 6 {{ModId}}_SeedShops 3 3",
        "43 7 {{ModId}}_SeedShops 3 4",
        "43 8 {{ModId}}_SeedShops 3 5"
      ],
      "When": {
        "WalkToShops": true
      }
    },
    {
      "Action": "EditMap",
      "Target": "Maps/KTG.SeedShopsMap",
      "AddWarps": [
        "2 3 BusStop 42 6",
        "2 4 BusStop 42 7",
        "2 5 BusStop 42 8"
      ],
      "When": {
        "WalkToShops": true
      }
    },
    {
      "Action": "EditData",
      "Target": "Strings/StringsFromMaps",
      "Entries": {
        "ShopSpecial": "{{i18n:ShopSpecial}}",
        "ShopSpring": "{{i18n:ShopSpring}}",
        "ShopSummer": "{{i18n:ShopSummer}}",
        "ShopFall": "{{i18n:ShopFall}}",
        "ShopWinter": "{{i18n:ShopWinter}}",
        "ShopCornucopia": "{{i18n:ShopCornucopia}}",
        "ShopFlowers": "{{i18n:ShopFlowers}}",
        "ShopTools": "{{i18n:ShopTools}}"
      }
    },
    {
      "Action": "EditData",
      "Target": "Mods/Pathoschild.CentralStation/Stops",
      "Entries": {
        "{{ModId}}_MarketStop": {
          "DisplayName": "{{i18n:DisplayName}}",
          "ToLocation": "{{ModId}}_SeedShops",
          "Network": "Bus",
          "ToTile": {
            "X": 9,
            "Y": 8
          }
        }
      }
    }
  ],
  "ModNotes": "Beautifying and basic JSON format validation through https://jsonformatter.org/"
}

